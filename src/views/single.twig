{% extends "template.html" %}
{% block content %}

<form style="text-align: center" method="post" action="/update-item/{{ clothes.id }}">
<h1>Részletek:</h1>
  <label>
    Név: <br>
    <input style="text-align: center" type="text" name="name" value="{{ clothes.name }}">
  </label>
  <br>
  <label>
    Ár: <br>
    <input style="text-align: center" type="number" name="price" value="{{ clothes.price }}">
  </label>
  <br>
  <label>
    Méret: <br>
    <input style="text-align: center" type="text" name="size" value="{{ clothes.size }}">
  </label>
  <br>
  <label>
    Szín: <br>
    <input style="text-align: center" type="text" name="color" value="{{ clothes.color }}">
  </label>
  <br>
 <label>
    Kedvezmény: <br>
    <input style="text-align: center" type="number" step="0.01" min="0" max="1" name="discount" value="{{ clothes.discount }}">
</label><br>
    <input type="hidden" name="id" value="{{ clothes.id }}">
  <input type="submit" value="Update">
</form>

{% endblock %}
